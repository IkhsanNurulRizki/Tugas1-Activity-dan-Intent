<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:orientation="vertical"
    tools:context=".Profile"
    android:background="@drawable/bg2">
    <TextView
        android:id="@+id/tgl_pengerjaan"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="20-04-2022"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="10119097"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Ikhsan Nurul Rizki"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/kelas"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="IF-3"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="262dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="65dp"
        android:src="@drawable/me2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhsan Nurul Rizki "
        android:layout_marginLeft="30dp"
        android:textColor="#BDBDBD"
        android:textSize="32sp"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nim2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="23sp"
        android:text="10119097"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/kelas2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="23sp"
        android:text="IF-3"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/desk"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:textSize="23sp"
        android:text="Mahasiswa UNIKOM Bandung
Jurusan Teknik Informatika, semester 6 dan saat ini sedang fokus mengejar cita-citanya."
        android:fontFamily="@font/aldrich"
        android:textColor="@color/white"/>

</LinearLayout>





